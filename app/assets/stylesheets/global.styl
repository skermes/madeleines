bg-color = #FFFFFF
contrast-color = #F8ECC9
button-color = #F1BBBA
text-color = #6B5344
link-color = #EB9F9F
success-color = #028F76
error-color = #D14334

ui-font()
  font-family "Satisfy", sans-serif
  color text-color

content-font()
  font-family "Open Sans", serif
  color text-color

animation()
  -webkit-animation arguments
  -moz-animation arguments
  -o-animation arguments
  animation arguments

button.button
  ui-font()
  font-size 1.25rem
  background-color button-color
  padding 0.5rem 1rem

  &[disabled]
    background-color rgba(button-color, 60%)

input[type="text"]
  content-font()
  box-sizing border-box
  border 1px solid text-color
  font-size 1rem
  padding 0.5rem
