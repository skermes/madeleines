bg-color = #FFFFFF
contrast-color = #8EB2C5
button-color = #615375
text-color = #333333
link-color = button-color
success-color = #A3A948
error-color = #CE1836

content-width = 30rem

tablet-media-query = '(min-width: 700px)'
desktop-media-query = '(min-width: 1200px)'

ui-font()
  font-family "Open Sans", sans-serif
  color text-color
  text-transform uppercase

content-font()
  font-family "Open Sans", sans-serif
  color text-color

animation()
  -webkit-animation arguments
  -moz-animation arguments
  -o-animation arguments
  animation arguments

status-message-container()
  position relative
  overflow hidden

main-content(vpad=0)
  width content-width
  margin 0 auto
  padding-top vpad
