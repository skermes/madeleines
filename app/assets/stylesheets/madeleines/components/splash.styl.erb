@import "global"

.splash

  float-on-top()
    position absolute
    top 0
    left 0
    right 0

  .login-button
    float-on-top()
    width 100%

  .login-form
    content-font()
    float-on-top()
    background-color bg-color
    padding 0 0.5rem 0.5rem 0.5rem
    border-bottom 0.25rem solid contrast-color

    label,
    input
      display block

    label,
    input[type="submit"]
      margin-top 0.5rem

    input
      width 100%

    .login-fail-message
      position absolute
      top 100%
      left 0
      right 0
      text-align center
      color bg-color
      background-color error-color

  .hero
    background-image url('<%= image_path('/splash-bg-phone.png') %>')
    background-size cover
    padding 6rem 0.5rem 2rem 0.5rem

    .tagline-container
      width 19rem
      margin auto

    hero-line()
      content-font()
      text-align justify
      text-align-last justify
      text-transform uppercase
      margin auto

      &:after
        content ""
        display inline-block
        width 100%

    .hero-line-normal
      hero-line()
      color bg-color
      font-size 1.5rem
      width 16rem

    .hero-line-pop
      hero-line()
      color contrast-color
      font-weight bold
      font-size 1.8rem
      width 19rem

  .splash-section
    content-font()
    padding 1rem
    background-color contrast-color
    line-height 1.5rem

    &:nth-child(2n)
      background-color bg-color
      text-align right

    &:first-line
      font-weight bold

  @media tablet-media-query
    .login-button, .login-form
      top 0.5rem
      right 4rem
      left auto
      width auto

    .login-form
      min-width 19.5rem
      border 0.25rem solid contrast-color

      .login-fail-message
        left -0.25rem
        right -0.25rem

    .hero
      background-image url('<%= image_path('/splash-bg-tablet.png') %>')

      .tagline-container
        margin-right 2rem
        width 24rem

      .hero-line-normal
        font-size 1.75rem
        width 20rem

      .hero-line-pop
        font-size 2.25rem
        width 24rem

    .splash-section
      font-size 1.75rem
      line-height 2rem

      &:first-line
        font-size 2rem

      .splash-text
        max-width 40rem
        margin auto
        padding-right 6rem

      &:nth-child(2n)
        .splash-text
          padding-right 0
          padding-left 6rem

@media desktop-media-query
  .splash
    .login-button, .login-form
      right 7rem

    .login-form
      min-width 21.5rem

    .hero
      background-image url('<%= image_path('/splash-bg-desktop.png') %>')

      .tagline-container
        margin-right 4rem
        width 28rem

      .hero-line-normal
        font-size 2rem
        width 22rem

      .hero-line-pop
        font-size 2.75rem
        width 28rem
