@import "global"

.top-bar
  background-color contrast-color

  ui-font()
  font-size 1.75rem

  .top-bar-content
    position relative

    .title
      display inline-block
      margin 0.5rem

    .change-page-button
      position absolute
      top 0
      right 0
      bottom 0

@media tablet-media-query
  .top-bar
    .top-bar-content
      max-width content-width
      margin auto
